<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/rel_proPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_profilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/profilePicture"
        android:src="@drawable/help_logo"
        android:layout_alignParentStart="true"
        android:layout_below="@id/btn_rateUser"/>

    <Button
        android:id="@+id/btn_rateUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="18sp"
        android:text="@string/rate_user"/>
    <TextView
        android:id="@+id/tv_reviewsWritten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_reviewsWritten"
        android:layout_below="@id/img_profilePic"
        android:layout_margin="16dp"
        android:textSize="24sp"/>

    <ListView
        android:layout_margin="16dp"
        android:id="@+id/list_reviewsWritten"
        android:dividerHeight="10dp"
        android:layout_below="@id/tv_reviewsWritten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_ratingsAboutMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_reviewsWritten"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:text="@string/tv_reviewsAboutYou"/>

     <ListView
         android:id="@+id/list_reviewsAboutMe"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:dividerHeight="10dp"
         android:layout_below="@id/tv_ratingsAboutMe"/>

    </RelativeLayout>
</ScrollView>
